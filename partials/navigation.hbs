{{#is "home"}}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
{{else}}
<header class="main-header no-cover">
{{/is}}

    <nav class="main-nav overlay clearfix">
        <div id="menuzord" class="menuzord">
          <ul class="menuzord-menu">
            {{#if @blog.logo}}<li><a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a></li>{{/if}}
            {{> "navigation/latest-posts"}}
            {{> "navigation/clients"}}
            {{> "navigation/hiring"}}
            {{> "navigation/finances"}}
            {{> "navigation/development"}}
          </ul>
        </div>
        <div class="current">
          {{> "current"}}
        </div>
    </nav>
    {{#is "home"}}
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
    {{/is}}
</header>
